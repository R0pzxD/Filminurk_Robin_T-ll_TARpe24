@model  IEnumerable<Filminurk.Models.FavouriteLists.FavouriteListsIndexViewModel>
@{
	int rowNumber = 1;
	int currentRow = 1;
	int currentTile = 1;
	int tilesInRow = 1;
}
<div>
	<a asp-action="CreateList" asp-controller="FavouriteLists" class="btn btn-primary">Tee uus lemmikute nimikiri</a>
	<a asp-action="Index" asp-controller="Home" class="btn btn-primary">Pealeht</a>
</div>
<div>
	<form method="post">
		<table class="table">
			<thead>
				@if (!Model.Any()){

					<tr>
						<th scope="col" colspan="2">
							<span>Kahjuks ei leidnud ühtegi lemmikute nimekirja.</span>
						</th>
					</tr>
				}
				else{
					<tr>
						<th scope="col" colspan="2">
							<span>Sinu nimekirjad:</span>
						</th>
					</tr>

				}
			</thead>
			<tbody>
				@if (!Model.Any()){

					<table>
						<tr>
							<td colspan="2">Sorry, no list</td>
						</tr>
						<tr>
							<td colspan="2"><img width="128" src="ˇ~/lib/defaultassets/image/noposter.png"/></td>
						</tr>
					</table>
				}
				else
				{
					@foreach(var list  in Model)
					{
						<table>
							<tr>
								<td colspan="2">
									
									<a asp-action="ListDetailsListOwner" asp-controller="FavouriteLists" asp-route-id="@list.FavouriteListID"
									 asp-route-thisuserid="@list.ListsBelongsToUser">@list.ListName</a>
									
									
								</td>
							</tr>
							<tr>
								<td>
									@foreach(var image in list.Images)
									{
										<partial name="_ImageIndex" model="image" />
									}
								</td>
								<td>@list.ListDescription</td>
							</tr>
						</table>
					}
					rowNumber++;
				}
			</tbody>
		</table>
	</form>

</div>
