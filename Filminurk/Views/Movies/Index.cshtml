@model IEnumerable<Filminurk.Models.Movies.MoviesIndexViewModel>
@{
	int rowNumber = 1;
}
<div>
	<a asp-action="Create" asp-controller="Movies" type="submit" class="btn btn-primary"></a>
</div>
<div class="h1">
	Filmid
</div>
<form method="get">
	<table class="table table-hover">
		<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col">Filmi pealkiri</th>
				<th scope="col">Väljalaseaeg</th>
				<th scope="col">Hinnang</th>
				<th scope="col">Oskareid võitnud</th>
				<th scope="col">IDMb Hinnang</th>
			</tr>
		</thead>
		<tbody>
			@foreach(var movie in Model)
			{
				<tr>
					<td>@rowNumber</td>
					<td>@movie.Title</td>
					<td>movie.FirstPublished</td>
					<td>movie.CurrentRating</td>
					<td>movie.OscarsWon</td>
					<td>movie.IMDbRating</td>
				</tr>
				rowNumber += 1;
			}
		</tbody>
	</table>
</form>